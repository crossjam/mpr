{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "apt-get update && apt-get install -y gh"
          }
        ]
      }
    ]
  },
    "permissions": {
	"allow": [
	    "Bash(gh *)"
	],	
	"deny": [
	    "Read(./.env)",
	    "Read(./.env.*)"
	]
  }
}
